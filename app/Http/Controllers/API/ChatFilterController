<?php

namespace App\Http\Controllers\Api;

use App\Http\Controllers\Controller;
use App\Models\ChatFilter;
use App\Models\Conversation;
use Illuminate\Http\Request;

class ChatFilterController extends Controller
{
    public function update(Request $request, $conversationId)
    {
        $conversation = Conversation::where('conversation_id', $conversationId)
            ->where('user_id', $request->user()->id)
            ->firstOrFail();

        $data = $request->validate([
            'field_id' => 'nullable|integer',
            'methodology_id' => 'nullable|integer',
            'indexing_id' => 'nullable|integer',
            'start_year' => 'nullable|integer|min:1900|max:2100',
            'end_year' => 'nullable|integer|min:1900|max:2100',
            'language_id' => 'nullable|integer',
        ]);

        $filter = ChatFilter::updateOrCreate(
            ['conversation_id' => $conversation->conversation_id],
            $data
        );

        return response()->json($filter);
    }
}
